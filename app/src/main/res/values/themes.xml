<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.EventManagement" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_700</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.EventManagement.Button</item>
        <item name="textInputStyle">@style/Widget.EventManagement.TextInputLayout</item>
        <item name="cardViewStyle">@style/Widget.EventManagement.CardView</item>
    </style>

    <!-- No ActionBar theme -->
    <style name="Theme.EventManagement.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Button style -->
    <style name="Widget.EventManagement.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- TextInputLayout style -->
    <style name="Widget.EventManagement.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/gray_700</item>
    </style>

    <!-- CardView style -->
    <style name="Widget.EventManagement.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <!-- Text Appearance Styles -->
    <style name="TextAppearance.EventManagement.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.EventManagement.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.EventManagement.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="TextAppearance.EventManagement.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/gray_700</item>
    </style>
</resources>
